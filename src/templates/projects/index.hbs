{{#extend "layout"}}
    {{#replace "main"}}
        <div class="container">
            <div class="inner">
                <div class="row text-center">
                    <div class="col-md-4 col-md-offset-4">
                        <h2>Projects</h2>
                    </div>
                </div>
                <div class="row top-buffer text-center">
                    <div class="col-md-4">
                        <i class="fa fa-5x fa-cubes" aria-hidden="true"></i>
                        <br>
                        <p class="top-buffer">All Projects</p>
                    </div>
                    <div class="col-md-4">
                        <i class="fa fa-5x fa-cube" aria-hidden="true"></i>
                        <br>
                        <p class="top-buffer">Active Live Projects</p>
                    </div>
                    <div class="col-md-4">
                        <i class="fa fa-5x fa-dashcube" aria-hidden="true"></i>
                        <br>
                        <p class="top-buffer">Completed Projects</p>
                    </div>
                </div>
                <div class="row text-center top-buffer">
                    <button type="button" class="btn btn-lg btn-primary top-buffer">New Project</button>
                </div>
            </div>
        </div>
    {{/replace}}
{{/extend}}
